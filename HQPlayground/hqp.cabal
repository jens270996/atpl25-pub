executable ProgramInversion
  import: exe-common
  main-is: ProgramInversion.hs
  ghc-options:
      -Wno-missing-signatures
      -Wno-name-shadowing
      -Wno-incomplete-uni-patterns

executable YesTeleportation
  import: exe-common
  build-depends:
    random
  main-is: YesTeleportation.hs

executable TestRepeater
  import: exe-common
  main-is: TestRepeater.hs
  build-depends:
    random
  ghc-options:
      -Wno-missing-signatures
      -Wno-name-shadowing
      -Wno-incomplete-uni-patterns

